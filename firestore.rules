rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Прямое разрешение для всех документов
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Дублирующее разрешение специально для вложенных комментов
    match /posts/{postId}/comments/{commentId} {
      allow read, write: if request.auth != null;
    }

    // Разрешаем листинг (просмотр списка)
    match /posts/{postId}/comments {
      allow list: if request.auth != null;
    }
  }
}
