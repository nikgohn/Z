rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Rule for user profiles
    // Anyone can read a profile, but only the user themselves can edit it.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for posts and their subcollections
    match /posts/{postId} {
      // Anyone can read posts.
      allow read: if true;

      // The author can create their own post.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      
      // Any authenticated user can update a post (for liking).
      allow update: if request.auth != null;

      // Only the author can delete their post.
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;

      // Rules for the 'comments' subcollection
      match /comments/{commentId} {
        // Any authenticated user can read or write comments.
        allow read, write: if request.auth != null;
      }
    }
  }
}
